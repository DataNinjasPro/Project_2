driverless_car = False

if driverless_car == True:
    # Do something
    print("Oh no! The driver's asleep! What do we do?!")
    print()
    print("All is good. Auto-pilot initiated.")
else:
    # Do something else
    print("Oh no! The driver's asleep! MAYDAY! MAYDAY!")


